  "components": {
    "schemas": {
      "token": {
        "type": "string",
        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJhdXRoZW5LZXkiOiJ0Ym95IiwiaWF0IjoxNTIzNDkxOTkyLCJleHAiOjE1MjM2NjQ3OTJ9.ynUt-X0Y3RzNyi6lXBzGLkgYzpxBh635SPzArS8IEXI"
      },
      "id": {
        "type": "integer",
        "example": 1
      },
      "center": {
        "type": "object",
        "properties": {
          "centerName": {
            "type": "string",
            "example": "D`cubicle event center"
          },
          "centerLocation": {
            "type": "string",
            "example": "Lagos"
          },
          "sits": {
            "type": "integer",
            "example": "500"
          },
          "price": {
            "type": "integer",
            "example": "#450"
          },
          "facilities": {
            "type": "array",
            "example": ["AC", "Catering"]
          },
          "imgUrl": {
            "type": "string",
            "example": "path/to/uploaded/photo"
          },
          "id": {
            "$ref": "#/components/schemas/id"
          },
          "userId": {
            "$ref": "#/components/schemas/id"
          }
        }
      },
      "event": {
        "type": "object",
        "properties": {
          "eventType": {
            "type": "string",
            "example": "Mega Plus Concert"
          },
          "eventData": {
            "type": "string",
            "example": "10/16/2018"
          },
          "facilities": {
            "type": "array",
            "example": ["AC", "DJ"]
          },
          "imgUrl": {
            "type": "string",
            "example": "path/to/event/photo"
          },
          "centerId": {
            "$ref": "#/components/schemas/id"
          },
          "userId": {
            "$ref": "#/components/schemas/id"
          }
        }
      },
      "notification": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "We are glad to info you your event will be fulfilled"
          },
          "userId": {
            "$ref": "#/components/schemas/id"
          }
        }
      },
      "users": {
        "fullname": {
          "type": "string",
          "example": "Tutu Godfrey"
        },
        "username": {
          "type": "string",
          "example": "johnd"
        },
        "email": {
          "type": "string",
          "example": "tutugodfrey@gmail.com"
        },
        "gender": {
          "type": "string",
          "example": "male"
        },
        "securityQtn": {
          "type": "string",
          "example": "What is the name of your first car"
        },
        "securityAns": {
          "type": "string",
          "example": "Toyota"
